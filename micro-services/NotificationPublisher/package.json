{
    "name": "notification-publisher",
    "version": "0.0.1",
    "main": "NotificationPublisherServer.js",
    "private": true,
    "dependencies": {
        "tslib": "^2.6.0",
        "jsonwebtoken": "^9.0.0",
        "express": "^4.18.2"
    },
    "files": [
        "dist/**/*.js",
        "package.json"
    ],
    "scripts": {
        "build": "esbuild --bundle NotificationPublisherServer.ts --outfile=dist/src/notification_publisher_server.js --platform=node --target=node20",
        "compile-alpine": "pkg -t latest-alpine -o dist/lib/index dist/src/notification_publisher_server.js",
        "build-and-run": "esbuild --bundle NotificationPublisherServer.ts --outfile=dist/src/notification_publisher_server.js --platform=node --target=node20 && node dist/src/notification_publisher_server.js"
    },
    "devDependencies": {
        "@types/node": "^20.4.2",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "concurrently": "^8.1.0",
        "esbuild": "0.17.19",
        "pkg": "^5.8.1",
        "typescript": "^5.1.3"
    }
}