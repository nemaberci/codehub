{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "strict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ESNext",
            "ScriptHost"
        ],
        "skipLibCheck": false,
        "noEmit": false,
        "outDir": "dist"
    },
    "exclude": [
        "*/node_modules/*"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.js"
    ]
}